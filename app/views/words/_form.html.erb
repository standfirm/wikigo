<%= form_for(word) do |f| %>
  <% if word.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(word.errors.count, "error") %> prohibited this word from being saved:</h2>

      <ul>
        <% word.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col s12">
      <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
    </div>
  </div>

  <div class="row">
    <div id="edit" class="col s12 m12">
      <div class="field">
        <%= f.label :body %>
        <%= f.text_area :body %>
      </div>

      <div class="actions">
        <%= f.submit class: 'btn'%>
      </div>
    </div>
  </div>
<% end %>

<script>
  $(function(){
    var simplemde = new SimpleMDE({
      spellChecker: false,
    });

    $('#edit, input, textarea').on('keyup change', function(){
      $(window).bind('beforeunload', function() {
        return "本当に移動しますか。";
      });
    });

    $('input[type=submit]').on('click', function(e) {
      $(window).off('beforeunload');
    });
  });
</script>

