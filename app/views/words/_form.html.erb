<%= form_for(word) do |f| %>
  <% if word.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(word.errors.count, "error") %> prohibited this word from being saved:</h2>

      <ul>
        <% word.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col s12">
      <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
    </div>
  </div>

  <div class="row">
    <div id="edit" class="col s12 m6">
      <div class="field">
        <%= f.label :body %>
        <%= f.text_area :body, id: 'raw-editor-body', class: 'materialize-textarea' %>
      </div>

      <div class="actions">
        <%= f.submit class: 'btn'%>
      </div>
    </div>
    <div id="preview" class="markdown col s12 m6"></div>
  </div>
<% end %>

<script>
  $(function(){
    fn = function() { $('#preview').html(marked($('#raw-editor-body').val())) };
    setInterval(fn, 1500);
    $('.container').css('width', '90%')
    var simplemde = new SimpleMDE({
      toolbar: true
    });
    });
  </script>

