doctype html
html lang="en" 
  head
    meta content=("text/html; charset=UTF-8") http-equiv="Content-Type" /
    meta charset="utf-8" /
    meta content="IE=Edge,chrome=1" http-equiv="X-UA-Compatible" /
    meta content="width=device-width, initial-scale=1.0" name="viewport" /
    title= content_for?(:title) ? yield(:title) : "Wiki"
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
    = stylesheet_link_tag "https://fonts.googleapis.com/earlyaccess/notosansjapanese.css", :media => "all"
    = javascript_include_tag "application"

    meta[name="viewport" content="width=device-width, initial-scale=1.0"]

    /! Le HTML5 shim, for IE6-8 support of HTML elements
    /![if lt IE 9]
      | <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js" type="text/javascript"></script
    link href="//cdn.jsdelivr.net/editor/0.1.0/editor.css" rel="stylesheet" /
    script src="//cdn.jsdelivr.net/editor/0.1.0/editor.js" 
    script src="//cdn.jsdelivr.net/editor/0.1.0/marked.js" 
  body
    header
      .navbar-fixed
        nav.white.grey-text
          .nav-wrapper
            = link_to 'Wiki Go', root_path, { class: 'brand-logo grey-text text-darken-3' }
            ul.right.hide-on-med-and-down
              li = link_to 'New Keyword', new_word_path, { class: 'btn' }
    main
      .container
        .row
          .col.s12
            #grid-container.section.scrollspy
              = yield

    footer.page-footer
      .container
        .row
          h5.white-text Menu
          ul
            li = link_to 'All words', words_index_path, { class: 'grey-text text-lighten-3'}
            - if user_signed_in?
              li = link_to 'Sign out', destroy_user_session_path, { method: :delete, class: 'grey-text text-lighten-3'}
            - else
              li = link_to 'Sign in', new_user_session_path, { class: 'grey-text text-lighten-3'}
      .footer-copyright
        .container
        = link_to 'designed by Madebyoliver from Flaticon', 'http://www.flaticon.com/authors/madebyoliver', { class: 'grey-text text-lighten-3'}

